#!/usr/bin/env node
var net = require('net')
  , fs = require('fs')
  , args = process.argv.slice(2)
  , log, sock, ender;

while (args.length) {
  var arg = args.shift()
    , host = arg.split(':');
  if (host[1])
    sock = net.createConnection(host[1], host[0]);
  else
    log = arg;
}

// write to stdout if a host isnt passed
if (!sock) sock = process.stdout;

fs.watchFile(log, { interval: 1000 }, function (curr, prev) {
  if (curr.size <= prev.size) return;
  if (curr.size - prev.size > 1 * 1024 * 1024) return;
  fs.createReadStream(log, {start: prev.size})
    .pipe(sock);
});
